{
  "compilerOptions": {
    "target": "ES2020",              
    "module": "commonjs",            
    "esModuleInterop": true,         
    "allowSyntheticDefaultImports": true,

    "strict": true,                  
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitOverride": true,

    "skipLibCheck": true,            

    // Output directory (optional on Vercel, since it runs .ts directly)
    "outDir": "./dist",              
    "rootDir": "./",

    "sourceMap": true,              
    "declaration": true,
    "declarationMap": true,
    "declarationDir": "./dist/types",

    "incremental": true,
    "tsBuildInfoFile": "./dist/.tsbuildinfo"
  },
  "include": [
    "server/**/*.ts",
    "src/**/*.ts",
    "*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.ts",
    "**/*.spec.ts"
  ]
}
