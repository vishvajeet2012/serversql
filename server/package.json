{
  "name": "serversql",
  "version": "1.0.0",
  "description": "Express server with TypeScript and Neon database",
  "main": "dist/server.js",
  "scripts": {
    "start": "node dist/server.js",
    "build": "prisma generate && tsc",
    "dev": "ts-node-dev --respawn --transpile-only server.ts",
    "postinstall": "prisma generate",
    "migrate:deploy": "prisma migrate deploy",
    "dev:nodemon": "nodemon --exec ts-node server.ts",
    "dev:ts-node": "ts-node server.ts",
    "clean": "rm -rf dist",
    "prebuild": "npm run clean",
    "watch": "tsc --watch"
  },
  "dependencies": {
    "@neondatabase/serverless": "^1.0.1",
    "@prisma/client": "^6.16.3",
    "@types/socket.io": "^3.0.1",
    "argon2": "^0.44.0",
    "bcryptjs": "^3.0.2",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "expo-server-sdk": "^4.0.0",
    "express": "^5.1.0",
    "firebase-admin": "^13.5.0",
    "jsonwebtoken": "^9.0.2",
    "node-cron": "^4.2.1",
    "socket.io": "^4.8.1",
    "ts-node": "^10.9.2"
  },
  "devDependencies": {
    "@types/argon2": "^0.14.1",
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^24.3.1",
    "nodemon": "^3.1.10",
    "prisma": "^6.16.3",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.9.3"
  },
  "prisma": {
    "seed": "ts-node prisma/seed.ts"
  }
}
