{
  "name": "serversql",
  "version": "1.0.0",
  "description": "Express server with TypeScript and Neon database",
  "main": "dist/server.js",
  "scripts": {
    "start": "node dist/server.js",
    "build": "tsc",
    "dev": "ts-node-dev --respawn --transpile-only server.ts",
    "dev:nodemon": "nodemon --exec ts-node server.ts",
    "dev:ts-node": "ts-node server.ts",
    "clean": "rm -rf dist",
    "prebuild": "npm run clean",
    "watch": "tsc --watch"
  },
  "dependencies": {
    "@neondatabase/serverless": "^1.0.1",
    "argon2": "^0.44.0",
    "bcryptjs": "^3.0.2",
    "cors": "^2.8.5",
    "dotenv": "^17.2.2",
    "express": "^5.1.0",
    "jsonwebtoken": "^9.0.2"
  },
  "devDependencies": {
    "@types/argon2": "^0.14.1",
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^24.3.1",
    "@vercel/node": "^5.3.21",
    "nodemon": "^3.1.10",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.9.2"
  }
}
